@model MVCKutuphane.Models.EntityF.Uyeler
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UyeGuncelle", "Uyeler", FormMethod.Post))
{
    <h2 class="text-center">Üye Güncelleme</h2>
    <form method="post" class="form-group-lg">

        @Html.HiddenFor(x => x.Id)
        <label>Üye Adı</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })<br />

        <label>Üye Soyadı</label>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })<br />

        <label>Üye Mail</label>
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })<br />

        <label>Üye Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })<br />

        <label>Üye Şifre</label>
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })<br />

        <label>Üye Fotoğraf</label>
        @Html.TextBoxFor(x => x.Fotograf, new { @class = "form-control" })<br />

        <label>Üye Telefon</label>
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })<br />

        <label>Üye Okul</label>
        @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })<br />

        <button class="btn btn-success">Bilgileri Güncelle"</button>

    </form>

}


