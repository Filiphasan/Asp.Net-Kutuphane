@using MVCKutuphane.Models.EntityF
@model List<Hareketler>
@{
    ViewBag.Title = "KitapListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@ViewBag.uyeAd Kitap Geçmişi</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Kitap</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Normal İade Tarihi</th>
        <th>Getirildiği Tarih</th>
    </tr>
    <tbody>
        @foreach (var k in Model)
        {
        <tr>
            <td>@k.Kitaplar.Ad</td>
            <td>@k.Personeller.Personel</td>
            <td>@Convert.ToDateTime(k.AlisTarihi).ToShortDateString()</td>
            <td>@Convert.ToDateTime(k.İadeTarih).ToShortDateString()</td>
            <td>@Convert.ToDateTime(k.GeldigiTarih).ToShortDateString()</td>
        </tr>
        }
    </tbody>
</table>

