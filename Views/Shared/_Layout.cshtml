
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 300px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                margin-bottom: 10px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: blue;
                }

        .main {
            margin-left: 300px; /* Same as the width of the sidenav */
            padding: 0px 20px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="glyphicon glyphicon-home"></i> AnaSayfa</a>
        <a href="/Kategoriler/Index"><i class="glyphicon glyphicon-list"></i> Kategoriler</a>
        <a href="/Kitap/Index"><i class="glyphicon glyphicon-book"></i> Kitaplar</a>
        <a href="/Yazar/Index"><i class="glyphicon glyphicon-pencil"></i> Yazarlar</a>
        <a href="/Uyeler/Index"><i class="glyphicon glyphicon-user"></i> Kullanıcılar</a>
        <a href="/Personeller/Index"><i class="glyphicon glyphicon-tower"></i> Personeller</a>
        <a href="/Odunc/OduncVer"><i class="glyphicon glyphicon-arrow-right"></i> Ödünç Kitap Ver</a>
        <a href="/Odunc/Index"><i class="glyphicon glyphicon-arrow-left"></i> Ödünç Kitap Al</a>
        <a href="/Istatistikler/Index"><i class="glyphicon glyphicon-sort"></i> İstatistikler</a>
        <a href="/Istatistikler/Hava"><i class="glyphicon glyphicon-cloud"></i> Hava Raporu</a>
        <a href="/Istatistikler/Galeri"><i class="glyphicon glyphicon-picture"></i> Galeri</a>
        <a href="/Istatistikler/LinqKart"><i class="glyphicon glyphicon-picture"></i> İstatistik Kartları</a>
        <a href="/Duyurular/Index"><i class="glyphicon glyphicon-comment"></i> Duyurular</a>
        <a href="/Islemler/Index"><i class="glyphicon glyphicon-dashboard"></i> İşlemler</a>
        <a href="/Vitrin/Index"><i class="glyphicon glyphicon-shopping-cart"></i> Vitrin</a>
        <a href="#contact"><i class="glyphicon glyphicon-cog"></i> Ayarlar</a>
        <a href="#contact"><i class="glyphicon glyphicon-phone"></i> Yardım</a>
        <a href="#contact"><i class="glyphicon glyphicon-remove-sign"></i> Çıkış</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

